# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default indentation: 4 spaces
indent_style = space
indent_size = 4

# Python
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 120

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# HTML
[*.html]
indent_size = 2

# CSS/SCSS/Sass
[*.{css,scss,sass,less}]
indent_size = 2

# Java
[*.java]
indent_size = 4
max_line_length = 120

# C/C++
[*.{c,cpp,h,hpp}]
indent_size = 4
max_line_length = 120

# C#
[*.cs]
indent_size = 4
max_line_length = 120

# Go
[*.go]
indent_style = tab
indent_size = 4

# Rust
[*.rs]
indent_size = 4
max_line_length = 100

# Ruby
[*.rb]
indent_size = 2

# PHP
[*.php]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab

# Package files
[{package.json,package-lock.json,yarn.lock}]
indent_size = 2

# Configuration files
[{*.config.js,*.config.ts,.prettierrc,.eslintrc,.babelrc}]
indent_size = 2

# Docker
[Dockerfile]
indent_size = 2

[docker-compose*.yml]
indent_size = 2

# SQL
[*.sql]
indent_size = 2

# GraphQL
[*.{graphql,gql}]
indent_size = 2

# XML
[*.xml]
indent_size = 2

# Vue
[*.vue]
indent_size = 2

# Svelte
[*.svelte]
indent_size = 2

# Ignore generated files
[{dist,build,coverage}/**]
insert_final_newline = false
trim_trailing_whitespace = false
